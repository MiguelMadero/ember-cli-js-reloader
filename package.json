{
  "name": "ember-cli-styles-reloader",
  "version": "0.1.5",
  "description": "Reloads (css|scss|sass|less|styl) without reloading the entire ember-cli app",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "mocha tests/*-test.js --reporter spec"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xomaczar/ember-cli-styles-reloader"
  },
  "engines": {
    "node": ">= 0.10.0"
  },
  "author": "Andrey Khomenko",
  "license": "MIT",
  "devDependencies": {
    "broccoli-asset-rev": "^2.0.2",
    "chai": "^3.0.0",
    "ember-cli": "0.2.7",
    "ember-cli-app-version": "0.3.3",
    "ember-cli-content-security-policy": "0.4.0",
    "ember-cli-dependency-checker": "^1.0.0",
    "ember-cli-htmlbars": "0.7.6",
    "ember-cli-ic-ajax": "0.1.1",
    "ember-cli-inject-live-reload": "^1.3.0",
    "ember-cli-uglify": "^1.0.1",
    "ember-try": "0.0.6",
    "mocha": "^2.2.5",
    "mocha-jshint": "^2.2.3"
  },
  "keywords": [
    "ember-addon",
    "livereload",
    "style",
    "style livereload",
    "assets livereload",
    "style refresh",
    "assets refresh",
    "css",
    "sass",
    "scss",
    "less",
    "styl"
  ],
  "dependencies": {
    "ember-cli-babel": "^5.0.0"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "main": "index.js"
}
