{
  "name": "ember-cli-styles-reloader",
  "version": "0.1.5",
  "description": "Reloads changed styles (css|scss|sass|less|styl) without reloading the entire ember-cli app",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "start": "ember server",
    "build": "ember build",
    "test": "ember try:testall"
  },
  "repository": "https://github.com/xomaczar/ember-cli-styles-reloader",
  "engines": {
    "node": ">= 0.10.0"
  },
  "author": "Andrey Khomenko",
  "license": "MIT",
  "devDependencies": {
    "broccoli-asset-rev": "^2.0.2",
    "ember-cli": "0.2.7",
    "ember-cli-app-version": "0.3.3",
    "ember-cli-content-security-policy": "0.4.0",
    "ember-cli-dependency-checker": "^1.0.0",
    "ember-cli-htmlbars": "0.7.6",
    "ember-cli-ic-ajax": "0.1.1",
    "ember-cli-inject-live-reload": "^1.3.0",
    "ember-cli-qunit": "0.3.13",
    "ember-cli-uglify": "^1.0.1",
    "ember-try": "0.0.6"
  },
  "keywords": [
    "ember-addon",
    "livereload",
    "style",
    "style livereload",
    "assets livereload",
    "style refresh",
    "assets refresh",
    "css",
    "sass",
    "scss",
    "less",
    "styl"
  ],
  "dependencies": {
    "ember-cli-babel": "^5.0.0"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  }
}
